<div class="columns">
  <form action="/form" method="post" class="container is-fluid column is-half">
    <h1 class="title">Form </h1>
    <div class="field">
      <label class="label">Name</label>
      <div class="control">
        {{#if error.name}}
          <input
            required
            class="input is-danger"
            name="name"
            type="text"
            placeholder="Text input"
            value={{error.name.value}}
          />
        {{else}}
          <input
            required
            class="input"
            name="name"
            type="text"
            placeholder="Text input"
          />
        {{/if}}
      </div>
      {{#if error.name}}
        <p class="help is-danger">{{error.name.msg}}</p>
      {{/if}}
    </div>
    <div class="field">
      <label class="label">Email</label>
      <div class="control has-icons-left has-icons-right">
        {{#if error.email}}
          <input
            required
            class="input is-danger"
            type="email"
            name="email"
            placeholder="Email input"
            value={{error.email.value}}
          />
        {{else}}
          <input
            required
            class="input"
            type="email"
            name="email"
            placeholder="Email input"
            value=""
          />
        {{/if}}

        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-exclamation-triangle"></i>
        </span>
      </div>
      {{#if error.email}}
        <p class="help is-danger">{{error.email.msg}}</p>
      {{/if}}
    </div>
    <div class="field">
      <label class="label">Phone number</label>
      <div class="control has-icons-left has-icons-right">
        {{#if error.phoneNumber}}
          <input
            required
            class="input is-danger"
            type="number"
            name="phoneNumber"
            placeholder="Phone number"
            value={{error.phoneNumber.value}}
          />
        {{else}}
          <input
            required
            class="input"
            type="number"
            name="phoneNumber"
            placeholder="Phone number"
            value=""
          />
        {{/if}}
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-exclamation-triangle"></i>
        </span>
      </div>
      {{#if error.phoneNumber}}
        <p class="help is-danger">{{error.phoneNumber.msg}}</p>
      {{/if}}
    </div>
    <div class="field">
      <label for="" class="label">Gender</label>
      <div class="control">
        <label class="radio" for="male">
          <input required id="male" type="radio" name="gender" value="male" />
          Male
        </label>
        <label class="radio" for="female">
          <input required id="female" type="radio" name="gender" value="male" />
          Female
        </label>
        <label class="radio" for="others">
          <input required id="others" type="radio" name="gender" value="male" />
          Others
        </label>
      </div>
    </div>

    <div class="field mt-4">
      <label class="label">Hobbies
        <div class="control">
          <label class="checkbox mr-2">
            <input type="checkbox" name="hobbies" value="reading" />
            Reading
          </label>
          <label class="checkbox mr-2">
            <input type="checkbox" name="hobbies" value="travelling" />
            Travelling
          </label>
          <label class="checkbox">
            <input type="checkbox" name="hobbies" value="music" />
            Music
          </label>
        </div>
      </label>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
      <div class="control">
        <button class="button is-link is-light">Cancel</button>
      </div>
    </div>
  </form>
</div>